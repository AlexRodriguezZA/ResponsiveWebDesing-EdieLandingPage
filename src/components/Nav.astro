---
const navItems = [
  { label: "Home", route: "#Home" },
  { label: "Services",route: "#Services"  },
  { label: "Our Works",route: "#OurWorks" },
  { label: "Clients",route: "#Clients" },
  { label: "Contact", route: "#contact" },
];
---

<nav class="w-11/12 md:w-full  max-w-5xl h-24 flex justify-between items-center text-[#333] fixed bg-white">
  <ul>
    <li class="text-2xl  md:text-3xl font-extrabold">Edie</li>
  </ul>
  <ul class="gap-10 hidden md:flex">
    {
        navItems.map( item => <li class="font-medium text-xl hover:cursor-pointer"><a href={item.route}>{item.label} </a></li> )
    }
  </ul>
</nav>
